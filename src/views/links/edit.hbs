
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card card-body">
                <form action="/links/update/{{links.id}}" method="post">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Ingrese su titulo" autofocus class="form-control"
                            value="{{links.title}}">
                    </div>
                    <div class="form-group">
                        <input type="url" name="url" class="form-control" placeholder="url" value="{{links.url}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Ingrese su descripcion">{{links.DESCRIPTION}}</textarea>
                    </div>
                    <input type="submit" class="btn btn-success btn-block" value="Editar">
                </form>
            </div>
        </div>
    </div>
</div>