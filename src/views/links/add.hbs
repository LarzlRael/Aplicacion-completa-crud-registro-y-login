<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card card-body">
                <form action="/links/add" method="post">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Ingrese su titulo" autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="url" name="url" class="form-control" placeholder="url">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Ingrese su descripcion"></textarea>
                    </div>
                    <input type="submit" class="btn btn-success btn-block" value="Enviar">
                </form>
            </div>
        </div>
    </div>
</div>